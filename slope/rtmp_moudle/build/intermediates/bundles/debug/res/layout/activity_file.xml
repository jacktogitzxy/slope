<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5" >

        <ListView
            android:id="@+id/huifang_listView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:listSelector="#144C67"
            android:scrollbars="none" >
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="3dp"
        android:layout_weight="0.8" >

        <LinearLayout
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical" >

            <LinearLayout
                android:id="@+id/huifang_lybt1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:background="@drawable/bt_click2"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/huifang_bsiv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bs1up" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="全选"
                    android:textColor="#999999"
                    android:textSize="24px" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/huifang_lybt2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:background="@drawable/bt_click2"
                android:gravity="center" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bs2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="删除"
                    android:textColor="#999999"
                    android:textSize="24px" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/huifang_lybt3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:background="@drawable/bt_click2"
                android:gravity="center" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bs3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="返回"
                    android:textColor="#999999"
                    android:textSize="26px" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:padding="10dp" >

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bt_click"
                android:gravity="center"
                android:text="时间"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#338fcc" />

            <TextView
                android:id="@+id/huifang_tv_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bt_click"
                android:gravity="center"
                android:text="来源"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#338fcc" />

            <TextView
                android:id="@+id/huifang_tv_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bt_click"
                android:gravity="center"
                android:text="类型"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#338fcc" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>