<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_4"
    android:layout_marginEnd="@dimen/dp_8"
    android:layout_marginStart="@dimen/dp_4"
    android:layout_marginTop="@dimen/dp_4"
    android:background="@color/color_e0e0e0"
    android:foreground="?android:attr/selectableItemBackground"
    android:stateListAnimator="@animator/lift_on_touch"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/main_color" />

            <ImageView
                android:id="@+id/typeHisicon"
                android:layout_width="@dimen/dp_15"
                android:layout_height="wrap_content"
                android:layout_gravity="left|top"
                android:src="@mipmap/solpeiconleft"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_7"/>
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_category"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/dp_10"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:background="@drawable/button_his_item"
                android:textColor="@color/white"
                tools:text="Button" />


            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/text_view_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_clock_white_24dp"
                android:gravity="center_vertical"
                android:text="2018-5-1"
                android:textColor="@color/white" />
        </FrameLayout>

        <LinearLayout
            android:background="@color/layout_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_view_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/dp_4"
                android:textSize="13sp"
                tools:text="@string/appbar_scrolling_view_behavior" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/text_view_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_4"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/dp_4"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_author_black_24dp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="13sp"
                tools:text="Xiao Ming" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>



