<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/pop_layout"
    android:background="#bf818181"
    android:paddingBottom="@dimen/dp_20"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_20"

        >
    <Button
        android:tag="1"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:onClick="openPM"
        android:layout_margin="@dimen/dp_5"
        android:text="@string/p_cam"
        android:background="@drawable/buttonred"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_large"/>

    <Button
        android:tag="2"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_margin="@dimen/dp_5"
        android:onClick="openPM"
        android:text="@string/p_sound"
        android:background="@drawable/buttonyell"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_large"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_20">
    <Button
        android:tag="3"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:onClick="openPM"
        android:layout_margin="@dimen/dp_5"
        android:text="@string/p_flash"
        android:background="@drawable/buttonyell"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_large"/>

    <Button
        android:tag="4"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:onClick="openPM"
        android:layout_margin="@dimen/dp_5"
        android:text="@string/p_loca"
        android:background="@drawable/buttonbg"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_large"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_20">
        <Button
            android:tag="5"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:onClick="openPM"
            android:layout_margin="@dimen/dp_5"
            android:text="@string/p_net"
            android:background="@drawable/buttonbg"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_large"/>

        <Button
            android:tag="6"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:onClick="openPM"
            android:layout_margin="@dimen/dp_5"
            android:text="@string/p_GPS"
            android:background="@drawable/buttonred"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_large"/>
    </LinearLayout>
</LinearLayout>