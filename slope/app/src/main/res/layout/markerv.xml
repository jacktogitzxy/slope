<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_200"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    >
    <TextView android:id="@+id/point_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:gravity="center"
        android:lines="1"
        android:text="@null"
        android:textSize="15sp"
        android:visibility="invisible"
        />
    <ImageView android:layout_width="wrap_content"
        android:id="@+id/point_icon"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@mipmap/slopered"
        android:layout_gravity="center"
        android:layout_below="@+id/point_info"/>
    <TextView android:id="@+id/point_dangername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/point_icon"
        android:lines="1"
        android:background="@drawable/search_layout_bg"
        android:textColor="@android:color/holo_red_dark"
        android:layout_gravity="left"
        android:textSize="15sp" android:text="@null"
        android:visibility="invisible"
        />

</RelativeLayout>
